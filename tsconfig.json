{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports":true,
    "target": "esnext",
    "esModuleInterop": true,
    "declaration": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./", 
    "paths": {
      "@js/*": ["src/js/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/type/*.d.ts",
  ],
}